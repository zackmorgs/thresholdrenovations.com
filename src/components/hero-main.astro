<script>
    document.addEventListener("DOMContentLoaded", function () {
        const bidBtn = document.getElementById("hero_cta_bid");
        const callBtn = document.getElementById("hero_cta_call");

        if (bidBtn) {
            bidBtn.addEventListener("click", function () {
                console.log("hero_cta_bid clicked.");
                if (window.gtag) {
                    window.gtag("event", "cta_bid_click", {
                        event_category: "CTA",
                        event_label: "Request a Free Bid (Hero)",
                    });
                }
            });
        }

        if (callBtn) {
            callBtn.addEventListener("click", function () {
                console.log("hero_cta_call clicked.");
                if (window.gtag) {
                    window.gtag("event", "cta_call_click", {
                        event_category: "CTA",
                        event_label: "Call (Hero)",
                    });
                }
            });
        }
    });
</script>

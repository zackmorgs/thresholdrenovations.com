---
const overview_services = [
    {
        title: "Interior Renovations",
        link: "/services/interior",
    },
    {
        title: "Exterior Renovations",
        link: "/services/exterior",
    },
    {
        title: "Custom Work",
        link: "/services/custom-work",
    },
    {
        title: "Sustainable Reuse",
        link: "/services/sustainable-reuse",
    },
];
---

<section class="section bg-black" id="sections_services_overview">
    <div class="content">
        <h2>Services Overview</h2>
        <hr class="rule" />
        <ul id="service_list">
            {
                overview_services.map((item, index) => (
                    <li class="service-item" key={index}>
                        <a href={item.link} class="service-link">
                            <article class="service-article">
                                <h3>{item.title}</h3>
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    height="2rem"
                                    width="2rem"
                                    viewBox="0 -960 960 960"
                                    fill="currentColor"
                                >
                                    <path d="M504-480 320-664l56-56 240 240-240 240-56-56 184-184Z" />
                                </svg>
                            </article>
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</section>
